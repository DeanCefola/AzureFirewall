{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },    
    "IPRange": {
      "type": "string",
      "defaultValue": "172.16",
      "metadata": {
        "description": "Enter the CIRD for this deployment (172.16.x.x leave last 2 octets blank)"
      },
      "minLength": 4,
      "maxLength": 7
    }    
  },
  "variables": {    
    
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "azfw-vNET-HUB",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "vNET Hub"
      },
      "copy": {
        "name": "vNET-Hub-Copy",
        "count": 1
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[concat(parameters('IPRange'),'.0.0/23')]"
          ]
        },
        "subnets": [
          {
            "name": "JumpboxSubnet",
            "properties": {
              "addressPrefix": "[concat(parameters('IPRange'),'.0.0/24')]"
            }
          },
          {
            "name": "AzureFirewallSubnet",
            "properties": {
              "addressPrefix": "[concat(parameters('IPRange'),'.1.0/24')]"
            }
          }
        ]
      },
      "dependsOn": [

      ]
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "azfw-vNET-SPOKE",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "vNET Spoke"
      },
      "copy": {
        "name": "vNET-Spoke-Copy",
        "count": 1
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[concat(parameters('IPRange'),'.2.0/24')]"
          ]
        },
        "subnets": [
          {
            "name": "ServersSubnet",
            "properties": {
              "addressPrefix": "[concat(parameters('IPRange'),'.2.0/24')]",
              "routeTable": {
                "id": "[resourceId('Microsoft.Network/routeTables', 'AZ-RouteTable')]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/routeTables', 'AZ-RouteTable')]"
      ]
    },
    {
      "type": "Microsoft.Network/routeTables",
      "name": "AZ-RouteTable",
      "apiVersion": "2018-02-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Route Table",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "copy": {
        "name": "Route-Copy",
        "count": 1
      },
      "properties": {
        "disableBgpRoutePropagation": false,
        "routes": [
          {
            "name": "AzfwDefaultRoute",
            "properties": {
              "addressPrefix": "0.0.0.0/0",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "[concat(parameters('IPRange'),'.1.4')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[concat(uniquestring(resourceGroup().id), 'sajumpbox')]",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "tags": {
        "displayName": "Storage Account",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "copy": {
        "name": "Storage-Copy",
        "count": 1
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "Jump-PIP",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Jump-PIP",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "copy": {
        "name": "Jump-PIP-Copy",
        "count": 1
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "Jump-NSG",
      "apiVersion": "2018-02-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Jump NSG",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "copy": {
        "name": "Jump-NSG-Copy",
        "count": 1
      },
      "properties": {
        "securityRules": [
          {
            "name": "myNetworkSecurityGroupRuleRDP",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "Jump-Nic",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Jump NIC",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "copy": {
        "name": "Jump-NIC-Copy",
        "count": 1
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses','Jump-PIP')]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'azfw-vNET-HUB', 'JumpboxSubnet')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'Jump-NSG')]"
        }
      },
      "dependsOn": [
        "Jump-PIP-Copy",
        "vNET-Hub-Copy",
        "Jump-NSG-Copy"
      ]
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "Server-Nic",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Server NIC",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "copy": {
        "name": "Server-NIC-Copy",
        "count": 1
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'azfw-vNET-SPOKE', 'ServersSubnet')]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "vNET-Spoke-Copy"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "JumpBox",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "Jump-VM-Copy",
        "count": 1
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2012-R2-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "osType": "Windows",
            "createOption": "FromImage",
            "name": "JumpBox-OSDisk",
            "diskSizeGB": 127
          },
          "dataDisks": []
        },
        "osProfile": {
          "computerName": "JumpBox",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "secrets": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'Jump-Nic')]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', concat(uniquestring(resourceGroup().id), 'sajumpbox'))).primaryEndpoints.blob]"
          }
        }
      },
      "dependsOn": [
        "Storage-Copy",
        "Jump-NIC-Copy"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "Server",
      "apiVersion": "2017-12-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "Server-VM-Copy",
        "count": 1
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2012-R2-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "osType": "Windows",
            "createOption": "FromImage",
            "name": "Server-OSDisk",
            "diskSizeGB": 127
          },
          "dataDisks": []
        },
        "osProfile": {
          "computerName": "Server",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "secrets": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'Server-Nic')]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', concat(uniquestring(resourceGroup().id), 'sajumpbox'))).primaryEndpoints.blob]"
          }
        }
      },
      "dependsOn": [
        "Storage-Copy",
        "Server-NIC-Copy"
      ]
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "AZFW-PIP",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard"
      },
      "tags": {
        "displayName": "AZFW-PIP",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "copy": {
        "name": "AZFW-PIP-Copy",
        "count": 1
      },
      "properties": {
        "publicIPAllocationMethod": "Static",
        "publicIPAddressVersion": "IPv4"
      }
    },
    {
      "type": "Microsoft.Network/azureFirewalls",
      "name": "AZFW-1",
      "apiVersion": "2018-08-01",
      "location": "eastus",
      "tags": {
        "displayName": "Firewall",
        "Application": "Azure Learning",
        "CostCode": "AA-Money",
        "Environment": "Lab"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "IpConf",
            "properties": {
              "privateIPAddress": "172.16.1.4",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'azfw-vNET-HUB', 'AzureFirewallSubnet')]"
              },
              "InternalPublicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses','AZFW-PIP')]"
              }
            }
          }
        ],
        "networkRuleCollections": [
          {
            "name": "ALLOW--Internal--ADRules",
            "properties": {
              "provisioningState": "Succeeded",
              "priority": 100,
              "action": {
                "type": "Allow"
              },
              "rules": [
                {
                  "name": "AD-Both",
                  "protocols": [
                    "TCP",
                    "UDP",
                    "ICMP"
                  ],
                  "sourceAddresses": [
                    "*"
                  ],
                  "destinationAddresses": [
                    "172.16.2.0/24"
                  ],
                  "destinationPorts": [
                    "53",
                    "137",
                    "139",
                    "389",
                    "464",
                    "1024-5000",
                    "49152-64000"
                  ]
                },
                {
                  "name": "AD-TCP",
                  "protocols": [
                    "TCP"
                  ],
                  "sourceAddresses": [
                    "*"
                  ],
                  "destinationAddresses": [
                    "172.16.2.0/24"
                  ],
                  "destinationPorts": [
                    "25",
                    "42",
                    "88",
                    "135",
                    "636",
                    "3268",
                    "3269",
                    "5722",
                    "9389",
                    "5986"
                  ]
                },
                {
                  "name": "AD-UDP",
                  "protocols": [
                    "UDP"
                  ],
                  "sourceAddresses": [
                    "*"
                  ],
                  "destinationAddresses": [
                    "172.16.2.0/24"
                  ],
                  "destinationPorts": [
                    "123",
                    "138"
                  ]
                },
                {
                  "name": "AD-SMB",
                  "protocols": [
                    "TCP",
                    "ICMP"
                  ],
                  "sourceAddresses": [
                    "*"
                  ],
                  "destinationAddresses": [
                    "172.16.2.0/24"
                  ],
                  "destinationPorts": [
                    "445"
                  ]
                }
              ]
            }
          }
        ],
        "applicationRuleCollections": [
          {
            "name": "ALLOW--OutBount--AzureServices",
            "properties": {
              "priority": 1000,
              "action": {
                "type": "Allow"
              },
              "rules": [
                {
                  "name": "Microsoft",
                  "protocols": [
                    {
                      "protocolType": "Http",
                      "port": 80
                    },
                    {
                      "protocolType": "Https",
                      "port": 443
                    }
                  ],
                  "fqdnTags": [],
                  "targetFqdns": [
                    "*.microsoft.com"
                  ],
                  "sourceAddresses": [
                    "172.16.2.0/24"
                  ]
                },
                {
                  "name": "Bing",
                  "protocols": [
                    {
                      "protocolType": "Http",
                      "port": 80
                    },
                    {
                      "protocolType": "Https",
                      "port": 443
                    }
                  ],
                  "fqdnTags": [],
                  "targetFqdns": [
                    "*.bing.com"
                  ],
                  "sourceAddresses": [
                    "172.16.2.0/24"
                  ]
                },
                {
                  "name": "Github",
                  "protocols": [
                    {
                      "protocolType": "Http",
                      "port": 80
                    },
                    {
                      "protocolType": "Https",
                      "port": 443
                    }
                  ],
                  "fqdnTags": [],
                  "targetFqdns": [
                    "*.bing.com"
                  ],
                  "sourceAddresses": [
                    "172.16.2.0/24"
                  ]
                },
                {
                  "name": "Azure Backup",
                  "protocols": [
                    {
                      "protocolType": "Http",
                      "port": 80
                    },
                    {
                      "protocolType": "Https",
                      "port": 443
                    }
                  ],
                  "fqdnTags": [
                    "AzureBackup"
                  ],
                  "targetFqdns": [],
                  "sourceAddresses": [
                    "172.16.2.0/24"
                  ]
                },
                {
                  "name": "Windows Update",
                  "protocols": [
                    {
                      "protocolType": "Http",
                      "port": 80
                    },
                    {
                      "protocolType": "Https",
                      "port": 443
                    }
                  ],
                  "fqdnTags": [
                    "WindowsUpdate"
                  ],
                  "targetFqdns": [],
                  "sourceAddresses": [
                    "172.16.2.0/24"
                  ]
                },
                {
                  "name": "Azure Services",
                  "protocols": [
                    {
                      "protocolType": "Http",
                      "port": 80
                    },
                    {
                      "protocolType": "Https",
                      "port": 443
                    }
                  ],
                  "fqdnTags": [
                    "AppServiceEnvironment",
                    "MicrosoftActiveProtectionService",
                    "WindowsDiagnostics"
                  ],
                  "targetFqdns": [],
                  "sourceAddresses": [
                    "172.16.2.0/24"
                  ]
                }
              ]
            }
          }
        ],
        "natRuleCollections": [
          {
            "name": "ALLOW--Inbound--Remote",
            "properties": {              
              "priority": 1010,
              "action": {
                "type": "Dnat"
              },
              "rules": [
                {
                  "name": "RDP",
                  "protocols": [
                    "TCP"
                  ],
                  "translatedAddress": "172.16.2.4",
                  "translatedPort": "3389",
                  "sourceAddresses": [
                    "*"
                  ],
                  "destinationAddresses": [
                    "104.45.169.247"
                  ],
                  "destinationPorts": [
                    "33890"
                  ]
                },
                {
                  "name": "SSH",
                  "protocols": [
                    "TCP"
                  ],
                  "translatedAddress": "172.16.2.4",
                  "translatedPort": "22",
                  "sourceAddresses": [
                    "*"
                  ],
                  "destinationAddresses": [
                    "104.45.169.247"
                  ],
                  "destinationPorts": [
                    "220"
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {

  }
}
